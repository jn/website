<div class="page-header post-header <% if @post && @post.header_image.present? %>background-image<% end %>"
    <%= style_for_header_image_on_post(@post) if @post %>>
  <a href="/posts" title="Go Back" class="back-button  posts-back-button">&nbsp;</a>
  
  <div class="col-xs-12 data-wrapper">
    <div class="avatar-wrapper">
      <a href="/">
        <img  class="avatar" src="https://secure.gravatar.com/avatar/bccdd41945f78d7cb7c2f64275efa100.png?r=PG&s=400" width="100" alt="Julian Nadeau">
      </a>
    </div>

    <div class="col-xs-10 col-xs-offset-1 col-md-offset-2">
      <%= yield %>
    </div>

    <div class="clear"></div>
  </div>
</div>
