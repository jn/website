<div class="page-header post-header <% if @post && @post.header_image_stored? %>background-image<% end %>"
    <%= style_for_header_image_on_post(@post) if @post %>>

  <div class="col-xs-12" <%= top_for_header(@post) %>>
    <div class="col-xs-2 col-sm-1 col-md-2">
      <a href="/">
        <img  class="avatar" src="https://secure.gravatar.com/avatar/bccdd41945f78d7cb7c2f64275efa100.png?r=PG&s=400" width="100" alt="Julian Nadeau">
      </a>
    </div>

    <div class="post-data col-xs-10 col-sm-11 col-md-10">
      <%= yield %>
    </div>

    <div class="clear"></div>
  </div>
</div>