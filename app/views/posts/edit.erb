<h1>Edit Post</h1>
<form action="/posts/<%= @post.handle %>" method="post" class="posts-form">
  <input type="hidden" name="_method" value="put" />

  <label for="post_title">Title:</label><br />
  <input id="post_title" class="form-control" name="post[title]" type="text" value="<%= @post.title %>" />
  <br />

  <label for="post_body">Body:</label><br />
  <%= erb(:"posts/editor", locals: { :content => @post.body }, :layout => false) %>
  <input id="post_body" class="form-control" name="post[body]" type="hidden" />
  <br />

  <label for="post_tags">Tags:</label><br />
  <input id="post_tags" class="form-control" name="post[tags]" type="text" value="<%= @post.tags %>" />
  <br />

  <input type="submit" value="Edit Post" class="btn btn-primary" />
</form>
