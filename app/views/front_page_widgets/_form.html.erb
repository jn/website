<%= form_for(@front_page_widget) do |f| %>
  <div class="page-header post-header">
    <h1>
      <%= @front_page_widget.new_record? ? "New" : "Editing" %> Widget
    </h1>
  </div>

  <div class="form">

    <%= render "layouts/forms/errors", object: @front_page_widget %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :subtext %><br>
      <%= f.text_field :subtext, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :url %><br>
      <%= f.text_field :url, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <div class="actions">
      <br>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
