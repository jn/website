<div class="card card-max" data-no-turbolink>
  <% if object.try(:embed?) %>
    <%= embed(embed_url) %>
  <% else %>                            
    <%= link_to link do %>
      <div class="header" style="background-image:url('<%= asset_url header_image %>')">
        <div class="filter"></div>
        <div class="actions">
          <p class="action-btn">Read Content</p>
        </div>
      </div>
    <% end %>
  <% end %>
  
  <div class="content clearfix">
    <h4 class="title"><%= link_to object.title, link %></a></h4>
    <%= yield %>
    <div class="tags"><%= linked_tag_list(object) %></div>
  </div>
</div>
